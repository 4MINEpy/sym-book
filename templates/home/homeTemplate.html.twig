<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}SymBook - Home{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('CSS/bootstrap.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #0d2235;">
    <div class="container-fluid">
        {# Left side - Website name with icon #}
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-book me-2">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
            SymBook
        </a>

        {# Middle - Search bar #}
        <div class="d-flex justify-content-center flex-grow-1 mx-4">
            <form class="d-flex w-100" style="max-width: 600px;">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Rechercher un livre..." aria-label="Search">
                    <button class="btn btn-primary" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                    </button>
                </div>
            </form>
        </div>

        {# Right side - Navigation links #}
        <div class="d-flex">
            <ul class="navbar-nav">
                {% if app.user %}
                    {# Display these when user is logged in #}
                    <li class="nav-item">
                        <a href="{{ path('cart_index') }}" class="nav-link">
                            <i class="fas fa-shopping-cart"></i> Panier
                            {% if app.session.get('cart')|length > 0 %}
                                <span class="badge bg-primary rounded-pill">
                                    {{ app.session.get('cart')|length }}
                                </span>
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link" href="">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user me-1">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            Profil ({{ app.user.firstName ?? app.user.email }})
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out me-1">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                <polyline points="16 17 21 12 16 7"></polyline>
                                <line x1="21" y1="12" x2="9" y2="12"></line>
                            </svg>
                            DÃ©connexion
                        </a>
                    </li>
                {% else %}
                    {# Display these when user is NOT logged in #}
                    <li class="nav-item">
                        <a href="{{ path('cart_index') }}" class="nav-link">
                            <i class="fas fa-shopping-cart"></i> Panier
                            {% if app.session.get('cart')|length > 0 %}
                                <span class="badge bg-primary rounded-pill">
                                    {{ app.session.get('cart')|length }}
                                </span>
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-in me-1">
                                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                <polyline points="10 17 15 12 10 7"></polyline>
                                <line x1="15" y1="12" x2="3" y2="12"></line>
                            </svg>
                            Connexion
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link" href="{{ path('app_register') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-plus me-1">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="8.5" cy="7" r="4"></circle>
                                <line x1="20" y1="8" x2="20" y2="14"></line>
                                <line x1="23" y1="11" x2="17" y2="11"></line>
                            </svg>
                            Inscription
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<div class="flash-message">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
<div class="container">
    {% block body %}{% endblock %}
</div>
</body>
</html>