{% extends 'home/homeTemplate.html.twig' %}

{% block title %}{{ livres.titre }} - Détails du livre{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row g-5">
            {# Book Cover Column #}
            <div class="col-md-5">
                <div class="card shadow-sm border-0 h-100">
                    <img src="{{ livres.image ? livres.image : 'https://via.placeholder.com/400x600?text=Couverture+non+disponible' }}"
                         class="card-img-top img-fluid rounded"
                         alt="Couverture de {{ livres.titre }}"
                         style="max-height: 600px; object-fit: contain;">
                </div>
            </div>

            {# Book Details Column #}
            <div class="col-md-7">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        {# Category Badge #}
                        <span class="badge bg-primary mb-3">
                        {{ livres.categorie ? livres.categorie.libelle : 'Non catégorisé' }}
                    </span>

                        {# Title #}
                        <h1 class="display-5 fw-bold mb-3">{{ livres.titre }}</h1>

                        {# Author/Editor #}
                        <p class="text-muted mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill me-1" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                            </svg>
                            Éditeur: {{ livres.editeur }}
                        </p>

                        {# Price #}
                        <div class="d-flex align-items-center mb-4">
                            <span class="display-6 fw-bold text-primary me-3">{{ livres.prix }} €</span>
                            <span class="text-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill me-1" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                            En stock
                        </span>
                        </div>

                        {# Add to Cart Form #}
                        <form action="{{ path('cart_add', {'id': livres.id}) }}" method="post" class="mb-5">
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="quantity" class="col-form-label">Quantité:</label>
                                </div>
                                <div class="col-auto">
                                    <input type="number"
                                           id="quantity"
                                           name="quantity"
                                           class="form-control"
                                           min="1"
                                           max="10"
                                           value="1"
                                           style="width: 80px;">
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart-plus me-2" viewBox="0 0 16 16">
                                            <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                        </svg>
                                        Ajouter au panier
                                    </button>
                                </div>
                            </div>
                        </form>

                        {# Book Details Accordion #}
                        <div class="accordion mb-4" id="bookDetailsAccordion">
                            {# Description #}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingDescription">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDescription" aria-expanded="true" aria-controls="collapseDescription">
                                        Description
                                    </button>
                                </h2>
                                <div id="collapseDescription" class="accordion-collapse collapse show" aria-labelledby="headingDescription" data-bs-parent="#bookDetailsAccordion">
                                    <div class="accordion-body">
                                        {{ livres.resume ? livres.resume : 'Aucune description disponible pour ce livre.' }}
                                    </div>
                                </div>
                            </div>

                            {# Details #}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingDetails">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetails" aria-expanded="false" aria-controls="collapseDetails">
                                        Détails techniques
                                    </button>
                                </h2>
                                <div id="collapseDetails" class="accordion-collapse collapse" aria-labelledby="headingDetails" data-bs-parent="#bookDetailsAccordion">
                                    <div class="accordion-body">
                                        <ul class="list-unstyled">
                                            <li><strong>ISBN:</strong> {{ livres.ISBN }}</li>
                                            <li><strong>Date d'édition:</strong> {{ livres.dateEdition ? livres.dateEdition|date('d/m/Y') : 'Non spécifiée' }}</li>
                                            <li><strong>Catégorie:</strong> {{ livres.categorie ? livres.categorie.libelle : 'Non spécifiée' }}</li>
                                            <li><strong>Éditeur:</strong> {{ livres.editeur }}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# Back Button #}
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-1" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                            </svg>
                            Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}